# ============================================================================
# RAG API Environment Configuration
# Copia este archivo a .env y actualiza los valores
# ============================================================================

# ============================================================================
# OpenAI Configuration - REQUERIDO
# ============================================================================
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4o

# ============================================================================
# Qdrant Configuration
# ============================================================================
# Opción 1: Usar Qdrant Cloud (recomendado para producción)
# QDRANT_CLUSTER_ENDPOINT=https://your-qdrant-cloud-url.gcp.cloud.qdrant.io
# QDRANT_API_KEY=your-qdrant-api-key

# Opción 2: Usar Docker local (para desarrollo/testing)
QDRANT_CLUSTER_ENDPOINT=http://qdrant:6333
QDRANT_API_KEY=
QDRANT_COLLECTION_NAME=rag_documents
QDRANT_PORT=6333
QDRANT_GRPC_PORT=6334

# ============================================================================
# Redis Configuration (para caching)
# ============================================================================
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=redis
REDIS_PORT=6379
CACHE_TTL=3600

# ============================================================================
# LangSmith Configuration (opcional - para observabilidad)
# ============================================================================
LANGSMITH_API_KEY=
LANGSMITH_PROJECT=rag-project

# ============================================================================
# Server Configuration
# ============================================================================
API_PORT=8000
LANGSERVE_HOST=0.0.0.0
LANGSERVE_PORT=8000

# ============================================================================
# RAG Pipeline Configuration
# ============================================================================
RAG_CHUNK_SIZE=1000
RAG_CHUNK_OVERLAP=200
RAG_RETRIEVER_K=5
CHUNKING_STRATEGY=recursive

# ============================================================================
# Embedding Configuration
# ============================================================================
EMBEDDING_MODEL=text-embedding-3-large
EMBEDDING_DIMENSIONS=512

# ============================================================================
# Logging Configuration
# ============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# ============================================================================
# Rate Limiting
# ============================================================================
RATE_LIMIT_RPM=10
TOKENS_PER_MINUTE=90000

# ============================================================================
# Resilience & Performance
# ============================================================================
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=60
RETRY_MAX_ATTEMPTS=3

# ============================================================================
# Environment
# ============================================================================
ENVIRONMENT=production
DEBUG=false
